<div class="admin-title">
    <h2>Posts</h2>
    <a href="/addPost" class="button">+ Add New</a>
</div>

<ul class="admin-post">
    <% data.forEach(post => { %>
        <li>
            <a href="/post/<%= post._id %>" class="dashboard-post-link">
                <%= post.title %> &nearr;
            </a>

            <div class="admin-post-controls">
                <a href="/editPost/<%= post._id %>" class="btn-edit" style="font-family: 'poppins', sans-serif;">Edit</a>

                <form action="/deletePost/<%= post._id %>?_method=DELETE" method="post" style="display:inline;">
                    <input type="submit" value="Delete" class="btn-delete" style="font-family: 'poppins', sans-serif;">
                </form>
            </div>
        </li>
    <% }) %>
</ul>