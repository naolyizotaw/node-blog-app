<div class="author">
    <h1 class="author_heading">Hi I'm Ninja</h1>
    <p class="author_body">this is a test site for node js </p>
</div>

<img src="/img/author.jpeg" alt="Author Image" class="author_image" width="981" height="528">

<section class="articles">
    <h2 class="articles_heading">Latest Articles</h2>
    <ul class="article-ul">

        <% data.forEach(post => { %>

            <li><a href="/post/<%= post._id %>">
                <span><%= post.title %></span>
                <span class="article-list-date"><%= post.createdAt.toDateString() %></span>
            </a></li> 
        <% }) %>
        
        
    </ul>

    <% if (nextPage !== null) { %>
        <a href="/?page=<%= nextPage %>" class="pagination">&lt; View older posts</a>
    <% } %>
    
</section>